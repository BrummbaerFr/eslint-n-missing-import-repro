{
    "extends": [
        "eslint:recommended",
        "plugin:n/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "n/exports-style": [
            "error",
            "module.exports"
        ]
    }
}